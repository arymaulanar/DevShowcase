<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circularShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="counterTextStyle">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="overflowTextStyle">
        <item name="android:textColor">@color/an_system_red</item>
    </style>

    <style name="customTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/selector_hint_colors</item>
        <item name="boxStrokeColor">@color/selector_box_stroke</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="counterOverflowTextAppearance">@style/overflowTextStyle</item>
        <item name="counterTextAppearance">@style/counterTextStyle</item>
    </style>
</resources>
